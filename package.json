    "jsonc-eslint-parser": "^2.1.0",
    "ng-packagr": "21.0.1",
    "nx": "^22.3.3",
    "postcss": "^8.4.5",
    "postcss-url": "~10.1.3",
    "prettier": "^2.6.2",
