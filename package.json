    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "@nx/angular": "^22.3.3",
    "browserslist": "^4.28.1",
    "remark-gfm": "^4.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.4",
    "@angular-devkit/core": "^21.0.4",
    "@angular-devkit/schematics": "^21.0.4",
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@angular/language-service": "^21.0.6",
    "@ngneat/spectator": "^22.1.0",
    "@nx/devkit": "^22.3.3",
    "@nx/eslint": "^22.3.3",
    "@nx/eslint-plugin": "^22.3.3",
    "@nx/jest": "^22.3.3",
    "@nx/js": "^22.3.3",
    "@nx/playwright": "^22.3.3",
    "@nx/storybook": "^22.3.3",
    "@nx/web": "^22.3.3",
    "@nx/workspace": "^22.3.3",
    "@playwright/test": "^1.53.0",
    "@schematics/angular": "^21.0.4",
    "@storybook/addon-docs": "^10.1.9",
    "@storybook/angular": "^10.1.9",
    "@swc-node/register": "1.9.2",
    "@swc/core": "1.5.29",
    "@swc/helpers": "0.5.15",
    "@types/jest": "30.0.0",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@typescript-eslint/types": "^8.51.0",
    "@typescript-eslint/utils": "^8.51.0",
    "@vtabary/keepachangelog-cli": "^0.4.0",
